{
    "openapi": "3.0.0",
    "info": {
        "title": "Documentation Challenge",
        "description": "API's documentation for Rocketseat's Ignite challenge",
        "version": "1.0.0",
        "contact": {
            "email": "raphaelmb@gmail.com"
        }
    },
    "paths": {
        "/users": {
            "post": {
                "tags": ["User"],
                "summary": "Create user",
                "description": "Creates a new user",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "User",
                                    "email": "user@email.com"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "400": {
                        "description": "User already exists"
                    }
                }
            },
            "get": {
                "tags": ["User"],
                "summary": "List all users.",
                "description": "Lists all users.",
                "responses": {
                    "200": {
                        "description": "Success.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "name": {
                                                "type": "string"
                                            },
                                            "email": {
                                                "type": "string"
                                            },
                                            "id": {
                                                "type": "string"
                                            },
                                            "admin": {
                                                "type": "boolean"
                                            },
                                            "created_at": {
                                                "type": "string"
                                            },
                                            "updated_at": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/:user_id/admin": {},
        "/users/:user_id": {}
    }
}